set -eu

if bundle exec rubocop --version > /dev/null 2>&1; then
  RUBOCOP='bundle exec rubocop'
elif [ -x /opt/chefdk/embedded/bin/rubocop ]; then
  RUBOCOP='/opt/chefdk/embedded/bin/rubocop'
elif [ -x /opt/chef/embedded/bin/rubocop ]; then
  RUBOCOP='/opt/chef/embedded/bin/rubocop'
else
  echo 'Cannot find rubocop!'
  exit 1
fi

if [ "$#" -eq 0 ] || ! grep -F -- '-c' <<< "$*"; then
  opts='-c .rubocop.yml'
fi

exec $RUBOCOP --display-cop-names $opts "$@"
